<!DOCTYPE html>
<html lang='en'>
  <head>
    <title>Home Page</title>

    <link rel='stylesheet' href='/vendor/normalize-4.1.1.css' type='text/css' />
    <link rel='stylesheet' href='/vendor/border-box.css' type='text/css' />
    <link rel='stylesheet' href='/styles/layout.css' type='text/css' />
    <link rel='stylesheet' href='/styles/bootstrap.min.css' type='text/css' />
    <link rel="stylesheet" href="https://unpkg.com/flatpickr/dist/flatpickr.min.css">

    <script type='text/javascript' src='/vendor/jquery-3.0.0.js'></script>
    <script src="https://unpkg.com/flatpickr"></script>
    <script type='text/javascript' src='http://netdna.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js'></script>
    <script type='text/javascript' src='/scripts/app.js'></script>
    <script type='text/javascript' src='/scripts/validate.js'></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.17.1/moment.js"></script>
  </head>

  <body>
    <% include partials/_header %>

    <main>
      <div class='container'>
        <div class='row steps-list'>
          <div class='col-md-4'>&nbsp;</div>
          <div class='col-md-4'>
            <ul class='text-center step nav-tabs' role='tablist'>
              <li class="active">
                <a href="#step1" data-toggle="tab" aria-controls="step1" id="lnk-step1" role="tab">
                  <span class='step-icon img-circle active'>
                    <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
                  </span>
                </a>
              </li>

              <li class="disabled">
                <a href="#step2" data-toggle="tab" aria-controls="step2" id="lnk-step2" role="tab">
                  <span class='step-icon img-circle'>
                    <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
                  </span>
                </a>
              </li>

              <li class="disabled">
                <a href="#step3" data-toggle="tab" aria-controls="step3" id="lnk-step3" role="tab">
                  <span class='step-icon img-circle'>
                    <span class="glyphicon glyphicon-time" aria-hidden="true"></span>
                  </span>
                </a>
              </li>
            </ul>
          </div>
          <div class='col-md-4'>&nbsp;</div>
        </div>

        <div class='row'>
          <div class='col-md-3'>&nbsp;</div>
          <div class='col-md-6'>

            <form method='post' action='/create' class='create-form'>
              <div class='tab-content'>
                <div class='form-block tab-pane active' role='tabpanel' id='step1'>
                  <h3 class='step-title'>General information</h3>
                  <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class='form-group'>
                    <label for='title'>Title</label>
                    <input type='text' class='form-control' id='title' name='title'>
                  </div>
                  <div class='form-group'>
                    <label for='location'>Location</label>
                    <input type='text' class='form-control' id='location' name='location'>
                  </div>
                  <div class='form-group'>
                    <label for='description'>Description</label>
                    <textarea class="form-control" rows="2" id='description' name='description'></textarea>
                  </div>
                  <div class='form-group'>
                    <label for='name'>Organizer Name</label>
                    <input type='text' class='form-control' id='name' name='organizer'>
                  </div>
                  <div class='form-group'>
                    <label for='email'>Email</label>
                    <input type='email' class='form-control' id='email' name='email'>
                  </div>

                  <div class='pag'>
                    <button type="button" class='btn btn-default next'>Next</button>
                  </div>
                </div>

                <div class='form-block tab-pane' role='tabpanel' id='step2'>
                  <h3 class='step-title'>Date Options</h3>
                  <div class='form-group clearfix'>
                      <h4 class='dates-title'>Selected dates:</h4>
                      <ul id="flatpickr-dates"></ul>
                      <input class="flatpickr1" type="text" data-input>
                  </div>

                  <div class='pag'>
                    <button type="button" class='btn btn-default back'>Back</button>
                    <button type="button" class='btn btn-default next'>Next</button>
                  </div>
                </div>

                <div class='form-block tab-pane' role='tabpanel' id='step3'>
                  <h3 class='step-title'>Time options</h3>
                  <div class='time-options'></div>

                  <div class='pag'>
                    <button type="button" class='btn btn-default back'>Back</button>
                    <button type="submit" class="btn btn-default">Create Event</button>
                  </div>
                </div>
              </div>
            </form>
          </div>
          <div class='col-md-3'>&nbsp;</div>
        </div>
      </div>
    </main>
  </body>
</html>

